
<h1>Create Survey</h1>

<% if @survey %>
  <p><%=erb :_question_form %></p>
<% end %>


<form action="/survey/new" method="post">
  <input type="text" name="title" placeholder="Survey Title">
  <textarea type="text" name="description" placeholder="Describe your amazing survey here, buddy."></textarea>
  <input type="submit" value="Add Questions!">
</form>

