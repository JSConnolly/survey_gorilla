<h1>Create Survey, Hoser</h1>

<% if @survey %>
  <h2><%= @survey.title %></h2>
  <p><%= @survey.description %></p>

    <% unless @survey.pictures.empty? %>
      <img src="<%= @survey.pictures.first.image.gallery %>">
    <% end %>

  <div class="question_printer_3000"></div>
  <%=erb :_question_form %>

<% else %>
  <form action="/survey/new" method="post" id="create_survey">
    <input type="text" name="title" placeholder="Survey Title">
    <textarea type="text" name="description" placeholder="Describe your amazing survey here, buddy."></textarea>
    <input type="submit" value="Start Adding Questions!" class="button">
  </form>

<% end %>
