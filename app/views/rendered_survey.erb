<h1><%= @survey.title %></h1>

<% unless @survey.pictures.empty? %>
  <%=  erb :_survey_image, :layout => false, :locals => {:survey => @survey} %>
<% end %>

<hr>

<form method='post' action="/survey/<%= @survey.id %>">
  <%= erb :_display_survey_questions %>
  <div id="errors"></div>
  <input type="submit" value="Submit">
</form>


<script type="text/javascript" src="/js/submit_validation.js"></script>
